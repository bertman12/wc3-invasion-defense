{
    "root": true,
    "env": {
        "browser": false,
        "es2021": true
    },
    "extends": [
        // "eslint:recommended"
        // "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "curly": "warn",
        "no-empty" :"warn",
        "no-else-return": "error",
        "no-extra-bind": "warn",
        "no-useless-call": "warn",
        "no-extra-boolean-cast": "warn",
        "no-invalid-this": "error",
        "prefer-const" : "warn",
        "yoda" :"warn"
    }
}
